<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title" style="font-size: 25px">List decks</h4>
        <p>
          <%= t ".download" %>:
          <%= link_to "csv", admins_decks_path(format: "csv", query: @decks) %> |
          <%= link_to "excel", admins_decks_path(format: "xls", query: @decks) %>
        </p>
      </div>
      <div class="content table-responsive table-full-width">
          <table class="table table-hover">
              <thead>
                <th style="width: 12%">Image Cover Deck</th>
                <th style="width: 15%">Author</th>
                <th style="width: 15%">Deck title</th>
                <th style="width: 10%">Cards</th>
                <th style="width: 20%">Created at</th>
                <th style="width: 20%">Updated at</th>
                <th>Action</th>
              </thead>
              <tbody>
                <% if @decks.any? %>
                  <div><%= render @decks %></div>
                <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
